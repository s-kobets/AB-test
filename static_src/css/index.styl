@import "_mixins.styl";

@font-face
  font-family: 'OpenSans';
  src: url('../fonts/OpenSans-Regular.ttf')

@font-face
  font-family: 'OpenSans';
  src: url('../fonts/OpenSans-Bold.ttf')

*
  font-family: 'OpenSans', Arial, sans-serif

body
  display: flex;
  flex-direction: column;
  margin: 0;
  overflow hidden

.banner
  overflow-x: hidden;

  &-authorized
    position: relative;
    margin: 0 auto;
    padding-top: 70px;
    width: 100%;
    text-align: center;
    box-sizing: border-box;

    @media (max-width: 1024px)
      margin-top: 50px;

    @media (max-width: 369px)
      padding-top: 30px;

    .font30
      margin: 0;
      color: #fff;
      font-weight: bold;
      font-family: 'OpenBold', sans-serif;
      text-shadow: 2px 0 0 rgba(0, 0, 0, 0.45);

    .button-kit
      display: inline-block;
      padding-left: 10px;
      padding-right: 10px;
      font: bold 15px/16px 'OpenSans-Semibold', sans-serif;

    &_axe      
      banner-jpg(banner_axe);

      @media (max-width: 1169px)
        width: 100%;

      .button-kit
        background-color: #fff;
        color: black;
 
    &_man
      banner-jpg(banner_man);

      @media (max-width: 1169px)
        width: 100%;

      .button-kit
        background-color: green;
        color: #fff;

.area-link
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: block

.font30
  font-size: 30px;
  line-height: 30;
